{
    "name": "sqlgenix/sqlgenix",
    "description": "A PHP library that simplifies the construction of SQL queries for dynamic web applications.",
    "type": "library",
    "require": {
        "php": ">=7.1",
        "ext-mysqli": "*",
        "doctrine/dbal": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "SQLGenix\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SQLGenix\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "authors": [
        {
            "name": "Inkflow (Tom CUCHEROSSET)",
            "email": "tomcucherosset@hotmail.fr"
        }
    ]
}
